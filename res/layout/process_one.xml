<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_process_one"
    android:orientation="vertical"
    android:theme="@style/MyWaoooohBar"
    tools:context="com.chats.ci_waooooh.ProcessOneActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:background="#29E52F"
        android:textColor="#FFFFFF" 
        android:text="Continue" />

    <CheckBox
        android:id="@+id/btn_accepter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_continue"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:text="Accepter"
        android:textColor="#FF4134" />

</RelativeLayout>

